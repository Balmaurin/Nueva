# ===========================================
# CONFIGURACIÓN SEGURA - BACKEND SHEILY AI
# ===========================================
# Este archivo usa variables de entorno seguras
# NO incluir credenciales hardcodeadas

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================
PORT=${PORT:-8000}
NODE_ENV=${NODE_ENV:-development}
HOST=${HOST:-127.0.0.1}

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
# JWT_SECRET debe ser generado dinámicamente
JWT_SECRET=${JWT_SECRET}
BCRYPT_ROUNDS=${BCRYPT_ROUNDS:-12}
SESSION_TIMEOUT=${SESSION_TIMEOUT:-86400000}

# ===========================================
# CONFIGURACIÓN DEL MODELO LLAMA
# ===========================================
MODEL_SERVER_URL=${MODEL_SERVER_URL:-http://localhost:8005}
MODEL_PATH=${MODEL_PATH:-./models/llama/model}
MODEL_SERVER_PORT=${MODEL_SERVER_PORT:-8005}
LLM_MODE=${LLM_MODE:-openai}
LLM_BASE_URL=${LLM_BASE_URL:-http://localhost:8005}
LLM_MODEL_NAME=${LLM_MODEL_NAME:-Llama-3.2-3B-Instruct-Q8_0}
LLM_TIMEOUT=${LLM_TIMEOUT:-60}
LLM_MAX_RETRIES=${LLM_MAX_RETRIES:-3}

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
DB_TYPE=${DB_TYPE:-postgres}
DB_HOST=${DB_HOST:-localhost}
DB_PORT=${DB_PORT:-5432}
DB_NAME=${DB_NAME:-sheily_ai_db}
DB_USER=${DB_USER:-sheily_ai_user}
DB_PASSWORD=${DB_PASSWORD}

# ===========================================
# CONFIGURACIÓN DE REDIS
# ===========================================
REDIS_HOST=${REDIS_HOST:-localhost}
REDIS_PORT=${REDIS_PORT:-6379}
REDIS_PASSWORD=${REDIS_PASSWORD}

# ===========================================
# CONFIGURACIÓN DE MONITOREO
# ===========================================
BACKUP_DIR=${BACKUP_DIR:-./backups/chat}
MAX_BACKUPS=${MAX_BACKUPS:-10}
BACKUP_INTERVAL=${BACKUP_INTERVAL:-43200000}
LOG_LEVEL=${LOG_LEVEL:-info}
LOG_DIR=${LOG_DIR:-./logs}

# ===========================================
# CONFIGURACIÓN DE CACHE
# ===========================================
CACHE_ENABLED=${CACHE_ENABLED:-true}
CACHE_SIZE=${CACHE_SIZE:-1000}
CACHE_TTL=${CACHE_TTL:-300000}

# ===========================================
# CONFIGURACIÓN DE TOKENS
# ===========================================
TOKENS_PER_VALIDATED_EXERCISE=${TOKENS_PER_VALIDATED_EXERCISE:-10}
TOKEN_REWARD_MULTIPLIER=${TOKEN_REWARD_MULTIPLIER:-1.5}

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD AVANZADA
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=${RATE_LIMIT_WINDOW_MS:-900000}
RATE_LIMIT_MAX_REQUESTS=${RATE_LIMIT_MAX_REQUESTS:-100}

# CORS
CORS_ORIGIN=${CORS_ORIGIN:-http://localhost:3000}
CORS_CREDENTIALS=${CORS_CREDENTIALS:-true}

# SSL/TLS
SSL_ENABLED=${SSL_ENABLED:-false}
SSL_CERT_PATH=${SSL_CERT_PATH}
SSL_KEY_PATH=${SSL_KEY_PATH}

# ===========================================
# CONFIGURACIÓN DE EMAIL
# ===========================================
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT:-587}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM=${SMTP_FROM}

# ===========================================
# CONFIGURACIÓN DE BLOCKCHAIN
# ===========================================
SOLANA_RPC_URL=${SOLANA_RPC_URL:-https://api.devnet.solana.com}
SOLANA_PRIVATE_KEY=${SOLANA_PRIVATE_KEY}
SOLANA_PUBLIC_KEY=${SOLANA_PUBLIC_KEY}
